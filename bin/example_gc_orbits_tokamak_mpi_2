#!/bin/bash -e

PYTHON=python3

# run
struphy run DriftKinetic --mpi 2 -i examples/params_gc_orbits_tokamak.yml -o sim_3

# post process
struphy pproc sim_3

# Struphy path
STRUPHY=
li=$(pip show struphy)
#echo $li
take=false
for i in $li; do

    if [ "$take" = "true" ]; then
        #echo $take
        STRUPHY=$i/struphy
        break
    fi
    #echo "$i"
    if [ "$i" = "Location:" ]; then
        #echo "$i"
        take=true
    fi
done

path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_orbits_tokamak.py $STRUPHY/io/out/sim_3/
