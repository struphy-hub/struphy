#!/bin/bash -e

PYTHON=python3

# run
struphy run LinearMHDVlasovPC -i examples/params_hybridmhdvlasovpc.yml -o sim_9 --mpi 2 

# post process
struphy pproc sim_9

# Struphy path
cd ~
STRUPHY=$($PYTHON -c "import struphy as _; print(_.__path__[0])")

# diagnostics
path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_diagnostics_hybridmhdvlasovcc.py $STRUPHY/io/out/sim_9
