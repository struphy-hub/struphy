#!/bin/bash -e

PYTHON=python3

# run
struphy run LinearMHDVlasovCC -i examples/params_hybridmhdvlasovcc.yml -o sim_8 --mpi 2 

# post process
struphy pproc sim_8

# Struphy path
cd ~
STRUPHY=$($PYTHON -c "import struphy as _; print(_.__path__[0])")

# diagnostics
path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_diagnostics_hybridmhdvlasovcc.py $STRUPHY/io/out/sim_8
