#!/bin/bash -e

PYTHON=python3

# run
struphy run LinearMHD --mpi 4 -i examples/params_linearmhd.yml -o sim_3

# post process
struphy pproc sim_3

# Struphy path
cd ~
STRUPHY=$($PYTHON -c "import struphy as _; print(_.__path__[0])")

# diagnostics
path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_diagnostics_1dfft_linearmhd.py $STRUPHY/io/out/sim_3/
