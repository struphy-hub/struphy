#!/bin/bash -e

PYTHON=python3

# run
struphy run Maxwell -i examples/params_maxwell.yml -o sim_1

# post process
struphy pproc sim_1

# Struphy path
cd ~
STRUPHY=$($PYTHON -c "import struphy as _; print(_.__path__[0])")

# diagnostics
path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_diagnostics_1dfft_maxwell.py $STRUPHY/io/out/sim_1/
