#!/bin/bash -e

PYTHON=python3

# run
struphy run Vlasov --mpi 2 -i examples/params_orbits_tokamak.yml -o sim_4

# post process
struphy pproc sim_4

# Struphy path
cd ~
STRUPHY=$($PYTHON -c "import struphy as _; print(_.__path__[0])")

# diagnostics
path_e=$STRUPHY/examples
$PYTHON ${path_e}/example_orbits_tokamak.py $STRUPHY/io/out/sim_4/
